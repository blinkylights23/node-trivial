{
  "name": "@paulsmith/node-trivial",
  "version": "0.0.0-development",
  "description": "Jeopardy-like trivia",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist src",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "cover": "nyc npm t",
    "test": "mocha --require babel-register --compilers js:babel-register tests/index.js",
    "test:watch": "npm t -- -w",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blinkylights23/node-trivial.git"
  },
  "author": "Paul Smith <paul@paulsmith.io> (http://paulsmith.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blinkylights23/node-trivial/issues"
  },
  "homepage": "https://github.com/blinkylights23/node-trivial#readme",
  "devDependencies": {
    "babel-cli": "6.22.2",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-stage-2": "6.22.0",
    "babel-register": "6.22.0",
    "chai": "3.5.0",
    "commitizen": "2.9.5",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "2.0.0",
    "mocha": "3.2.0",
    "nyc": "10.1.2",
    "rimraf": "2.5.4",
    "semantic-release": "^6.3.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "config": {
    "babel": {
      "presets": [
        "es2015",
        "stage-2"
      ]
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    }
  }
}
